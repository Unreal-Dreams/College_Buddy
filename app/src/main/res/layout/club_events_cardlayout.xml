<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClubName"
            android:layout_margin="10dp"
            android:textSize="24sp"
            android:textColor="#8EF3F3"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/blogdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="posted at:"
                android:layout_margin="10dp"
                android:textSize="10sp"
                android:gravity="right|center_vertical"/>
        </LinearLayout>
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/clubEventPost"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/drawerback"/>


        <MultiAutoCompleteTextView
            android:id="@+id/blog_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:text="Link"
            android:visibility="gone"
            android:id="@+id/linkTextView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/clubEventDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textColor="@color/md_blue_A700"/>
            <TextView
                android:id="@+id/clubEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textColor="@color/md_blue_A700"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:text="Interested"
                    android:layout_gravity="center_vertical|right"
                    android:textColor="@color/gen_black"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/saveClubEvent"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:foregroundGravity="center"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/like_grey"/>

                <Button
                    android:id="@+id/reminderButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_button"
                    android:layout_marginRight="10dp"
                    android:text="Set Reminder"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:padding="10dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    </androidx.cardview.widget.CardView>

