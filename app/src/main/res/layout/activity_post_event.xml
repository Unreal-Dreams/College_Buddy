<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".clubEvents.postEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Club Name"
            android:textSize="20sp"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/clubName"
            android:layout_width="200dp"
            android:layout_height="35sp"
            android:backgroundTint="#EA0505" />
    </LinearLayout>
    <ImageView
        android:id="@+id/newPostImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="#FDFDFD"
        android:src="@drawable/agenda"
        app:srcCompat="@drawable/icon" />

    <MultiAutoCompleteTextView
        android:id="@+id/newPostDes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newPostImage"
        android:layout_marginTop="62dp"
        android:backgroundTint="#F80808"
        app:layout_constraintTop_toBottomOf="@+id/newPostImage"
        tools:layout_editor_absoluteX="154dp"
        android:hint="Description"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:hint="If any link"
        android:id="@+id/linkTextView" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Choose date"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/choose_date"
            android:hint="DD/MM/YYYY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:clickable="true"
            android:focusable="false"
            android:editable="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:text="Choose time"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/choose_time"
            android:hint="HH:mm AM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:clickable="true"
            android:focusable="false"
            android:editable="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/postEvent"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/newPostDes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="168dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="304dp"
        android:background="#FF1717"
        android:text="Post"
        app:layout_constraintTop_toBottomOf="@+id/newPostDes" />

</LinearLayout>