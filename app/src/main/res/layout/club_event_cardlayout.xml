<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/clubnewcard"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:weightSum="5">

            <TextView
                android:id="@+id/eventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="fill"
                android:textSize="20sp"
                android:padding="3dp"
                android:layout_weight="3"
                android:textStyle="bold"
                android:maxLength="30"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/blogdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/04/2000"
                android:textSize="10sp"
                android:layout_weight="2"
                android:layout_marginRight="9dp"
                android:gravity="top|right"/>

            <TextView
                android:id="@+id/menuoption"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:text="&#8942;"
                android:gravity="right"
                android:textSize="20sp"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_marginRight="15dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/authorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:textSize="17sp"
            android:padding="2dp"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:maxLength="60"
            android:textStyle="bold"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="fill"
            android:textSize="17sp"
            android:padding="2dp"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:maxLength="60"
            android:textStyle="bold"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/clubEventPost"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/collab"
            android:layout_gravity="fill"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


        <TextView
            android:id="@+id/blog_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:maxLength="100"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp">


            <TextView
                android:id="@+id/linkview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="Link:"
                android:visibility="gone"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginRight="10dp"
                android:text="snbnds"
                android:visibility="gone"
                android:textColor="#17c2c2"
                android:clickable="true"
                android:textIsSelectable="true"
                android:id="@+id/linkTextView"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/clubEventDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:padding="3dp"
                android:maxLength="16"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/clubEventTime"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:gravity="right"
                android:paddingEnd="20dp"
                android:padding="3dp"
                android:maxLength="15"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_gravity="fill" />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remind Me"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_gravity="center"/>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/reminderButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:foregroundGravity="center"
                android:visibility="visible"
                app:lottie_fileName="remainder.json" />


            <TextView
                android:id="@+id/text_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|right"
                android:text="Interested"
                android:layout_weight="1"
                android:textColor="@color/gen_black"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/saveClubEvent"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:foregroundGravity="center"
                android:visibility="visible"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@drawable/like_grey"/>





        </LinearLayout>







    </LinearLayout>


</LinearLayout>