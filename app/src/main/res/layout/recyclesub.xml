<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="#424242"
    tools:targetApi="o">
    <RelativeLayout
        android:id="@+id/cardlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/subname"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="20dp"
            android:padding="0dp"
            android:text="Maths"
            android:textSize="20sp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="100%"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/attendance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_alignBaseline="@id/textView"
            android:layout_toEndOf="@+id/linearLayoutCompat" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/linearLayoutCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/subname"
            android:layout_gravity="center"
            android:layout_below="@+id/subname"
            android:layout_marginStart="30dp"
            android:gravity="center">

            <Button
                android:id="@+id/AttendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subname"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/rectangle"
                android:padding="5dp"
                android:text="Attend"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/BunkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginVertical="5dp"
                android:background="@drawable/rectangle"
                android:padding="5dp"
                android:text="Bunk"
                android:textColor="#ffffff" />
        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/subname"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="50dp"
            android:layout_toEndOf="@+id/subname"
            android:text="Attended: "
            android:textSize="20sp"
            android:textColor="#ffffff"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>